<!-- views/complete-profile.hbs -->
<div class="container mt-5">
  <h2 class="mb-4">Complete Your Profile</h2>
  <form action="/complete-profile" method="POST">
    <div class="mb-3">
      <label for="fullName" class="form-label">Full Name</label>
      <input type="text" class="form-control" id="fullName" name="fullName" required placeholder="Enter your full name">
    </div>

    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <input type="number" class="form-control" id="age" name="age" min="0" required placeholder="Enter your age">
    </div>

    <div class="mb-3">
      <label for="phone" class="form-label">Phone Number</label>
      <input type="tel" class="form-control" id="phone" name="phone" required placeholder="Enter your phone number">
    </div>

    <button type="submit" class="btn btn-primary">Save Profile</button>
  </form>
</div>
