{{!-- Account Page Template --}}
<div class="account-container">
  {{!-- Header Section --}}
  <div class="account-header">
    <div class="account-header-content">
      <h1>My Account</h1>
      <p>Manage your rides and account settings</p>
    </div>
  </div>

  {{!-- User Profile Section --}}
  <div class="account-section">
    <div class="section-header">
      <h2>Profile Information</h2>
    </div>
    <div class="profile-card">
      <div class="profile-info">
        <div class="profile-item">
          <span class="label">Name:</span>
          <span class="value">{{user.name}}</span>
        </div>
        <div class="profile-item">
          <span class="label">Email:</span>
          <span class="value">{{user.email}}</span>
        </div>
        {{#if userProfile.phone}}
        <div class="profile-item">
          <span class="label">Phone:</span>
          <span class="value">{{userProfile.phone}}</span>
        </div>
        {{/if}}
        {{#if userProfile.age}}
        <div class="profile-item">
          <span class="label">Age:</span>
          <span class="value">{{userProfile.age}}</span>
        </div>
        {{/if}}
      </div>
      <div class="profile-actions">
        <a href="/complete-profile" class="btn btn-secondary">Edit Profile</a>
      </div>
    </div>
  </div>

  {{!-- Payment Methods Section --}}
  <div class="account-section">
    <div class="section-header">
      <h2>Payment Methods</h2>
    </div>
    <div class="payment-methods">
      {{#if hasPaymentMethod}}
        <div class="payment-card">
          <div class="payment-info">
            <span class="card-brand">{{paymentInfo.cardBrand}}</span>
            <span class="card-number">‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ‚Ä¢‚Ä¢‚Ä¢‚Ä¢ {{paymentInfo.cardLast4}}</span>
            <span class="card-status">Default</span>
          </div>
        </div>
      {{else}}
        <div class="no-payment">
          <p>No payment methods saved</p>
          <p class="text-muted">Add a payment method during your next ride</p>
        </div>
      {{/if}}
    </div>
  </div>

  {{!-- Rides Section --}}
  <div class="account-section">
    <div class="section-header">
      <h2>My Rides</h2>
      <span class="rides-count">{{rides.length}} ride{{#unless (eq rides.length 1)}}s{{/unless}}</span>
    </div>
    
    {{#if rides.length}}
      <div class="rides-list">
        {{#each rides}}
        <div class="ride-card">
          <div class="ride-header">
            <div class="ride-type">
              <span class="ride-icon">üöó</span>
              <span class="ride-name">{{ride.type}}</span>
            </div>
            <div class="ride-status status-{{status}}">
              {{#if (eq status 'confirmed')}}‚úì{{/if}}
              {{#if (eq status 'completed')}}‚úì{{/if}}
              {{#if (eq status 'cancelled')}}‚úó{{/if}}
              {{#if (eq status 'pending')}}‚è≥{{/if}}
              {{status}}
            </div>
          </div>
          
          <div class="ride-details">
            <div class="ride-route">
              <div class="route-item">
                <span class="route-dot pickup-dot"></span>
                <span class="route-address">{{pickup.address}}</span>
              </div>
              <div class="route-line"></div>
              <div class="route-item">
                <span class="route-dot dropoff-dot"></span>
                <span class="route-address">{{destination.address}}</span>
              </div>
            </div>
            
            <div class="ride-info">
              <div class="info-item">
                <span class="info-label">Date:</span>
                <span class="info-value">{{formattedDate}}</span>
              </div>
              <div class="info-item">
                <span class="info-label">Time:</span>
                <span class="info-value">{{formattedTime}}</span>
              </div>
              <div class="info-item">
                <span class="info-label">Distance:</span>
                <span class="info-value">{{distance}} km</span>
              </div>
              <div class="info-item">
                <span class="info-label">Price:</span>
                <span class="info-value">{{ride.price}} kr</span>
              </div>
            </div>
          </div>
          
          <div class="ride-actions">
            {{#if (eq status 'confirmed')}}
              <button class="btn btn-outline">View Details</button>
            {{/if}}
            {{#if (eq status 'completed')}}
              <button class="btn btn-outline">Book Again</button>
            {{/if}}
          </div>
        </div>
        {{/each}}
      </div>
    {{else}}
      <div class="no-rides">
        <div class="no-rides-icon">üöó</div>
        <h3>No rides yet</h3>
        <p>Book your first ride to see it here</p>
        <a href="/" class="btn btn-primary">Book a Ride</a>
      </div>
    {{/if}}
  </div>

  {{!-- Quick Actions --}}
  <div class="account-section">
    <div class="section-header">
      <h2>Quick Actions</h2>
    </div>
    <div class="quick-actions">
      <a href="/" class="action-card">
        <div class="action-icon">üöó</div>
        <div class="action-text">
          <h4>Book a Ride</h4>
          <p>Schedule your next trip</p>
        </div>
      </a>
      <a href="/complete-profile" class="action-card">
        <div class="action-icon">üë§</div>
        <div class="action-text">
          <h4>Edit Profile</h4>
          <p>Update your information</p>
        </div>
      </a>
    </div>
  </div>
</div>

