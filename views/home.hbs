<div class="home-container">
    <!-- Main Booking Interface -->
    <section class="booking-section">
        <div class="container">
            <div class="booking-layout">
                <!-- Left Panel - Booking Form -->
                <div class="booking-panel">

                    <div class="booking-form-container">
                        <section class="hero-section">
                            <div class="container-1">
                                <div class="hero-content">
                                    <h1 class="hero-title">Go anywhere with Zamzamelite</h1>
                                </div>
                            </div>
                        </section>

                        {{#if error}}
                        <div class="alert alert-error">
                            <p>{{error.message}}</p>
                        </div>
                        {{/if}}

                        <form class="booking-form" action="/trip" method="POST" id="tripForm">

                            <!-- Pickup Location -->
                            <div class="form-group">
                                <label for="pickup" class="form-label"></label>
                                <div class="search-container">
                                    
                                    <input 
                                        type="text" 
                                        id="pickup" 
                                        name="pickup" 
                                        class="search-input"
                                        placeholder="Enter pickup location"
                                        value="{{formData.pickup}}"
                                        aria-label="Pickup location"
                                        required
                                    />
                                    
                                </div>
                            </div>

                            <!-- Destination -->
                            <div class="form-group">
                                <label for="destination" class="form-label"></label>
                                <div class="search-container">
                                    
                                    <input 
                                        type="text" 
                                        id="destination" 
                                        name="destination" 
                                        class="search-input"
                                        placeholder="Enter destination"
                                        value="{{formData.destination}}"
                                        aria-label="Destination"
                                        required
                                    />
                                
                                </div>
                            </div>

                            <!-- Date and Time Row -->
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="date" class="form-label"></label>
                                    <input 
                                        type="date" 
                                        id="date" 
                                        name="date" 
                                        class="form-input" 
                                        value="{{formData.date}}"
                                        required
                                    >
                                </div>
                                
                                <div class="form-group">
                                    <label for="time" class="form-label"></label>
                                    <input 
                                        type="time" 
                                        id="time" 
                                        name="time" 
                                        class="form-input" 
                                        value="{{formData.time}}"
                                        required
                                    >
                                </div>


                            </div>

                            <!-- Submit Button -->
                <div class="cta-row">
                    {{#if user}}
                        <!-- Show full-width button when user is logged in -->
                        
                        <button type="submit" class="btn btn-primary btn-sm">
                        See prices
                        </button>
                    {{else}}
                        <!-- Show login text when no user is logged in -->
                        <a href="/login" class="btn btn-primary btn-sm">
                        See prices
                        </a>
                    {{/if}}
                    </div>


                        </form>

                        <!-- Trip Estimate Results -->
                        {{#if tripEstimate}}
                        <div class="trip-estimate">
                            <div class="estimate-header">
                                <h3>Trip Estimate</h3>
                            </div>
                            <div class="estimate-details">
                                <div class="estimate-item">
                                    <span class="estimate-label">Distance:</span>
                                    <span class="estimate-value">{{tripEstimate.distance}} km</span>
                                </div>
                                <div class="estimate-item">
                                    <span class="estimate-label">Duration:</span>
                                    <span class="estimate-value">~{{tripEstimate.duration}} min</span>
                                </div>
                                <div class="estimate-item estimate-price">
                                    <span class="estimate-label">Estimated Price:</span>
                                    <span class="estimate-value price">{{tripEstimate.price}}</span>
                                </div>
                            </div>
                            <button class="btn btn-success btn-large btn-full-width" id="bookTripBtn">
                                Book Trip
                            </button>
                        </div>
                        {{/if}}
                    </div>
                </div>

                <!-- Right Panel - Map -->
                <div class="map-panel">
                    <div id="map" class="map-container"></div>
                    {{#if tripEstimate}}
                    <div class="map-overlay">
                        <div class="route-info">
                            <div class="route-points">
                                <div class="route-point pickup">
                                    <span class="point-icon"></span>
                                    <span class="point-text">{{formData.pickup}}</span>
                                </div>
                                <div class="route-line"></div>
                                <div class="route-point destination">
                                    <span class="point-icon"></span>
                                    <span class="point-text">{{formData.destination}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</div>
